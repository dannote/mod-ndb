OBJECTS=mod_ndb.o JSON.o Query.o Execute.o MySQL_Field.o config.o \
read_http_post.o handlers.o result_buffer.o

INCLUDES=-I$(APXS_INCLUDEDIR) $(MY_INC1) $(MY_INC2) $(MY_INC3)
LIBS=$(APXS_LIBS_SHLIB) $(MY_LIBS) -lndbclient -lmystrings -lmysys -lstdc++

all: mod_ndb.so httpd.conf 

mod_ndb.so: $(OBJECTS)
	$(APXS_LD_SHLIB) $(APXS_LDFLAGS_SHLIB) -o $@ $(OBJECTS) $(LIBS)

.cc.o:
	g++ -c $(INCLUDES) $(APXS_CFLAGS) $(APXS_CFLAGS_SHLIB) -Wall -O0 -o $@ $< 


mod_ndb.o: $(MOD_SOURCE) mod_ndb.h mod_ndb_config.h revision.h
	g++ -c $(INCLUDES) $(APXS_CFLAGS) $(APXS_CFLAGS_SHLIB) -Wall -O0 -o $@ $(MOD_SOURCE)

handlers.o: handlers.cc mod_ndb.h
read_http_post.o: read_http_post.cc
JSON.o: JSON.cc mod_ndb.h MySQL_Field.h JSON.h
Query.o: Query.cc mod_ndb.h mod_ndb_config.h MySQL_Field.h index_object.h
Execute.o: Execute.cc mod_ndb.h JSON.h
MySQL_Field.o: MySQL_Field.cc MySQL_Field.h
config.o: config.cc mod_ndb.h mod_ndb_config.h
result_buffer.o: result_buffer.cc mod_ndb.h

rev:
	sh create_rev_h.sh

install: mod_ndb.so
	$(APXS) -i -n 'ndb' mod_ndb.so

clean:
	rm -f mod_ndb.so $(OBJECTS) httpd.conf

httpd.conf:
	sed -f template.sed $(TEMPLATE) > httpd.conf

start:
	$(START_HTTPD)
        
stop:
	$(STOP_HTTPD)
	
restart:
	$(RESTART_HTTPD)
